@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Employee List";
}

<h1 class="display-3">Employees</h1>
<form asp-action="Create" method="get" class="mt-3 mb-3">
    <button class="btn btn-outline-success" type="submit">Create new Employee</button>
</form>
<div class="container text-center mt-3">
    <div class="row border-bottom">
        <div class="col h5">
            Name
        </div>
        <div class="col h5">
            Salary
        </div>
        <div class="col h5">
            Department
        </div>
        <div class="col h5">
            Options
        </div>
    </div>
        @foreach (Employee employee in Model)
        {
            <div class="row mt-2 mb-2">
                <div class="col">
                    @employee.Name
                </div>
                <div class="col">
                    @employee.Salary
                </div>
                <div class="col">
                    @employee.Department
                </div>
                <div class="col d-flex flex-row justify-content-around">
                    <form asp-route-id="@employee.Id" asp-action="Detail" method="get">
                        <button class="btn btn-primary" type="submit">Details</button>
                    </form>
                    <form asp-route-id="@employee.Id" asp-action="Delete" method="post">
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>